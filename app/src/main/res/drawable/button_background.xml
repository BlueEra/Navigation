<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="250" android:exitFadeDuration="250">

    <!--按下时-->
    <item android:state_pressed="true">
        <shape>
            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
            <gradient
                android:angle="0"
                android:endColor="?attr/colorPrimary"
                android:startColor="?attr/colorPrimaryDark"
                android:type="linear" />
        </shape>
    </item>

    <!--不响应事件时-->
    <item android:state_enabled="false">
        <shape>
            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
            <solid
                android:angle="0"
                android:color="#C3C3C3" />
        </shape>
    </item>

    <!--焦点停留时-->
    <item android:state_focused="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#DDDDDD" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>

    <!--一般状态-->
    <item>
        <shape>
            <corners
                android:bottomLeftRadius="15dp"
                android:bottomRightRadius="15dp"
                android:topLeftRadius="15dp"
                android:topRightRadius="15dp" />
            <gradient
                android:angle="0"
                android:endColor="?attr/colorAccent"
                android:startColor="?attr/colorPrimary"
                android:type="linear" />
        </shape>
    </item>

</selector>